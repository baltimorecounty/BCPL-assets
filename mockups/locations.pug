doctype html

html

	head
		
		include includes/head.pug
		script(src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.10/handlebars.min.js")

		script(src="/dist/js/page-specific/branches-filter.js")
	body

		.container-fluid.internal 

			include includes/header-internal.pug

			.container

				header.row

					.col-lg-12

						.row

							.col-sm-12

								.section-title-wrapper

									.row.flex

										.col-sm-9
										
											.breadcrumbs-wrapper
												nav 
													ul
														li
															a(href="/")
																i.fa.fa-home
														li
															a(href="#") Services
														li
															a(href="#") Meeting Rooms

										.col-sm-3.actions.flex.flex-align-end-end
											
											span.print 
												i.fa.fa-print
												| Print 

											span.share 
												i.fa.fa-share-alt-square
												| Share
								

				main.row
					.col-md-3
						.filters
							h4 Find a Branch
							
							div
								input.form-control(type="text" placeholder="Enter your ZIP code")
							
							h4.amenities Branch Amenities

							script(id="amenities-template" type="text/x-handlebars-template")
								| {{#each this}}
								label
									input(type="checkbox") 
									| {{this}}
								| {{/each}}
							
							#amenities.collapse

							button.btn.btn-primary(class="collapse-control" data-toggle="collapse" data-target="#amenities" aria-expanded="false" aria-controls="amenities") <i class="fa fa-plus"></i> Show Filters 
					.col-md-9
						.filter-controls
							.row
								.col-sm-6
									.button-group-label Sort by name:
									#sort-control.control.btn-group.btn-group-toggle
										button.btn.btn-primary Ascending
										button.btn.btn-default Descending
								.col-sm-6
									.button-group-label View:
									#list-grid-control.control.btn-group.btn-group-toggle
										button.btn.btn-default List
										button.btn.btn-primary Grid
									
						.cards.grid
							script(id="branches-template" type="text/x-handlebars-template")
								| {{#each this}}
								a.card.grid-item(href="#")
									img(src="/dist/images/grumpy-cat.jpg")
									p {{this.name}} 
								| {{/each}}	
							#branches(style="display: none")

			include includes/footer.pug